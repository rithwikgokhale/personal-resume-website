---
permalink: /feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title }} - Blog</title>
  <subtitle>{{ site.tagline }}</subtitle>
  <link href="{{ site.url }}/feed.xml" rel="self"/>
  <link href="{{ site.url }}/"/>
  {% set latestPost = collections.blog | first %}
  <updated>{% if latestPost %}{{ latestPost.date | dateToRfc3339 }}{% else %}{{ "now" | dateToRfc3339 }}{% endif %}</updated>
  <id>{{ site.url }}/</id>
  <author>
    <name>{{ site.title }}</name>
  </author>
  {% for post in collections.blog | limit(20) %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ site.url }}{{ post.url }}"/>
    <updated>{{ post.date | dateToRfc3339 }}</updated>
    <id>{{ site.url }}{{ post.url }}</id>
    <content type="html">{{ post.data.excerpt | escape }}</content>
  </entry>
  {% endfor %}
</feed>
