{% extends "base.njk" %}

{% block title %}{{ title }} - {{ site.title }}{% endblock %}

{% block bodyClass %}{% endblock %}

{% block main %}
<article class="active">
  <h2 class="major">{{ title }}</h2>
  <p class="blog-meta">{{ date | formatDate }}</p>
  {% if tags %}
  <div class="blog-tags">
    {% for tag in tags %}{% if tag != "blog" %}<span class="tag">{{ tag }}</span>{% endif %}{% endfor %}
  </div>
  {% endif %}
  {{ content | safe }}
  <div class="blog-navigation">
    <a href="/#blog" class="button">‚Üê Back to Blog</a>
  </div>
</article>
{% endblock %}

{% block scripts %}
{# No SPA scripts needed for blog posts - they're standalone pages #}
{% endblock %}
